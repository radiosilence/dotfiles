#!/bin/bash
SRC=/Volumes/Turtlehead/music
DEST=oldboy:/mnt/kontent/music

if [ -d /Volumes/music ]; then
  DEST=/Volumes/music
fi

rclone sync \
  --progress \
  --size-only \
  --checkers=16 \
  --delete-during \
  --transfers=16 \
  --exclude="**/.DS_Store" \
  --exclude=".DS_Store" \
  -v \
  $SRC $DEST
