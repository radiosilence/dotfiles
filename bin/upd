#!/bin/sh
set -e

cd "$(mktemp -d)" || exit
SCRIPT_DIR="$(dirname "$0")"
DOTFILES="$(dirname "$SCRIPT_DIR")"

using() {
  command -v "$1" >/dev/null 2>&1
}

if [ -d "$DOTFILES" ]; then
  echo "[upd] updating dotfiles $DOTFILES..."
  (cd "$DOTFILES" && git pull && ./install)
fi

if using mise; then
  echo "[upd] updating mise..."
  mise up
  rm -rf ~/.local/share/mise/shims && mise reshim
fi

if using sheldon; then
  echo "[upd] updating sheldon..."
  sheldon lock --update
fi

if using yt; then
  echo "[upd] updating yt-dlp..."
  yt-dlp --update-to nightly
fi

if using apt; then
  echo "[upd] updating apt..."
  sudo apt update
  sudo apt upgrade -y
  sudo apt autoremove -y
fi

if using dnf; then
  echo "[upd] updating dnf..."
  sudo dnf update -y
fi

if using brew; then
  echo "[upd] updating brew..."
  brew bundle
  brew cu -af
  brew cleanup
  brew doctor
fi

cd - || exit
