#!/bin/sh
set -eu
BITRATE="${BITRATE:-160}"
CORES=$(nproc)

# If no arguments provided, use "." as the default
if [ $# -eq 0 ]; then
    set -- "."
fi

echo "[bits] $BITRATE kbps"
echo "[paths] $*"
echo "[cores] using $CORES cores"

find "$@" -type f \( -name "*.wav" -o -name "*.aiff" -o -name "*.flac" -o -name "*.m4a" \) -print0 |
	parallel -0 -j "$CORES" \
		"ffmpeg -i {} -c:a libopus -b:a ${BITRATE}k {}.opus && rm {}"
