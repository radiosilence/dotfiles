#!/bin/sh
set -eu

# Help flag
if [ "${1:-}" = "--help" ] || [ "${1:-}" = "-h" ]; then
  cat << EOF
Usage: $(basename "$0") [paths...]
Convert audio files (wav/aiff/flac/m4a) to Opus format

Converts in parallel and deletes originals after conversion.

Environment:
  BITRATE     Output bitrate in kbps (default: 160)

Examples:
  to-opus                      # Convert files in current directory
  to-opus ~/Music/Albums       # Convert specific directory
  BITRATE=192 to-opus .        # Use higher bitrate
EOF
  exit 0
fi

BITRATE="${BITRATE:-160}"
CORES=$(nproc)

# If no arguments provided, use "." as the default
if [ $# -eq 0 ]; then
  set -- "."
fi

echo "[bits] $BITRATE kbps"
echo "[paths] $*"
echo "[cores] using $CORES cores"

find "$@" -type f \( -name "*.wav" -o -name "*.aiff" -o -name "*.flac" -o -name "*.m4a" \) -print0 \
  | parallel -0 -j "$CORES" \
    "ffmpeg -i {} -c:a libopus -b:a ${BITRATE}k {}.opus && rm {}"
