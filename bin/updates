#!/usr/bin/env zsh
. ~/.dotfiles-dir
. $DOTFILES/common.zsh

if [ -d "$DOTFILES" ]; then
  echo "updating dotfiles $DOTFILES"
  (cd "$DOTFILES" && git pull)
fi

if is_cmd apt; then
  echo "updating apt"
  sudo apt update
  sudo apt upgrade -y
  sudo apt autoremove -y
fi

if is_cmd dnf; then
  echo "updating dnf"
  sudo dnf update -y
fi

if is_cmd mise; then
  echo "updating mise"
  mise up
  rm -rf ~/.local/share/mise/shims && mise reshim
fi

if is_cmd sheldon; then
  sheldon lock --update
fi

if is_cmd yt-dlp; then
  echo "updating yt-dlp"
  yt-dlp --update-to nightly
fi

if is_macos; then
  echo "updating brew"
  brew bundle
  brew cu -af
  brew cleanup
  brew doctor
fi
