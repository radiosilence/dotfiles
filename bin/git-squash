#!/bin/bash
set -eu
PARENT="${1:-main}"
TEMP=$(mktemp)
SPLIT_COMMIT=$(git merge-base HEAD "$PARENT")

format_commits() {
  git log --reverse --format="- %s%n%b" "$SPLIT_COMMIT"..HEAD | while IFS= read -r line; do
    if [[ -n "$line" && "$line" != "* " ]]; then
      printf "# %s\n" "$line"
    fi
  done
}

{
  printf "\n\n"
  format_commits
  printf "\n"
} >"$TEMP"

cat "$TEMP"
git reset --soft "$PARENT"
git add -A
git commit -t "$TEMP" || git reset --hard "HEAD@{1}"
rm "$TEMP"
