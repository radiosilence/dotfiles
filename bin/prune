#!/bin/bash

# Default values
MIN_SIZE=${MIN_SIZE:-3096}
TARGET_DIR=${1:-.}

# Find directories below the minimum size, escaping special characters
TO_DELETE=$(find "$TARGET_DIR" -type d -exec du -sk {} + | awk -v min="$MIN_SIZE" '$1 < min { $1=""; sub(/^ /, ""); print }' | grep -v '.stfolder' | grep -v '.git')

# Exit if no directories match the criteria
if [ -z "$TO_DELETE" ]; then
  echo "No directories below $MIN_SIZE KB in $TARGET_DIR."
  exit 0
fi

# Display directories that would be deleted using tree
echo "The following directories are below $MIN_SIZE KB and would be deleted:"
echo "$TO_DELETE"

# Confirm deletion
read -p "Are you sure you want to delete these directories? [y/N] " -n 1 -r
if [[ "$REPLY" =~ ^[Yy]$ ]]; then
  echo "$TO_DELETE" | tr '\n' '\0' | xargs -0 -I{} rm -rf "{}"
  printf "\nDirectories deleted."
else
  printf "\nOperation canceled."
fi
