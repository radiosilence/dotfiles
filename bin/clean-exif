#!/bin/sh
set -eu
CORES=$(nproc)

# If no arguments provided, use "." as the default
if [ $# -eq 0 ]; then
  set -- "."
fi

echo "ğŸ§¹ Cleaning EXIF data from images..."
echo "ğŸ“ Searching: $*"
echo "âš¡ Using $CORES cores"

# Check if exiftool is available
if ! command -v exiftool > /dev/null 2>&1; then
  echo "âŒ exiftool not found (brew install exiftool)"
  exit 1
fi

find "$@" -type f \( -name "*.jpg" -o -name "*.jpeg" -o -name "*.png" -o -name "*.tiff" -o -name "*.tif" -o -name "*.heic" -o -name "*.webp" \) -print0 \
  | parallel -0 -j "$CORES" \
    "if exiftool -overwrite_original -q \
      -gps:all= \
      -location:all= \
      -creator= \
      -by-line= \
      -credit= \
      -copyright= \
      -contact= \
      -caption-abstract= \
      -headline= \
      -instructions= \
      -keyword= \
      -category= \
      -supplemental-category= \
      -urgency= \
      -title= \
      -comment= \
      -usercomment= \
      -artist= \
      -author= \
      -xmp:all= \
      -iptc:all= \
      -photoshop:all= \
      -makernotes:all= \
      -exif:imageuniqueid= \
      -exif:cameraserialnumber= \
      -exif:lensserialnumber= \
      -exif:bodyserialnumber= \
      -exif:internalserialnumber= \
      -exif:cameraserialnumber= \
      -exif:uniquecameramodel= \
      -png:comment= \
      -png:description= \
      -png:disclaimer= \
      -png:warning= \
      -png:source= \
      -png:comment= \
      {} >/dev/null 2>&1; then \
        echo 'âœ… Cleaned: $(basename \"{}\")'; \
      else \
        echo 'âŒ Failed: $(basename \"{}\")'; \
      fi"
