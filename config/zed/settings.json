{
  "ssh_connections": [
    {
      "host": "oldboy",
      "projects": [
        {
          "paths": ["/home/jc"]
        }
      ]
    }
  ],
  "outline_panel": {
    "dock": "left"
  },
  "git_panel": {
    "dock": "right"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "use_system_prompts": true,
  "auto_install_extensions": {
    "ansible": true,
    "astro": true,
    "basher": true,
    "biome": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "elixir": true,
    "fish": true,
    "git-firefly": true,
    "helm": true,
    "html": true,
    "ini": true,
    "ruby": true,
    "kotlin": true,
    "lua": true,
    "nginx": true,
    "pylsp": true,
    "proto": true,
    "scss": true,
    "ssh-config": true,
    "stylelint": true,
    "terraform": true,
    "toml": true,
    "zedokai": true
  },
  "agent": {
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    },
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    },
    "version": "2"
  },
  "ui_font_size": 14,
  "buffer_font_size": 12.0,
  "buffer_font_family": "GeistMono Nerd Font",
  "terminal": {
    "font_size": 12
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Zedokai"
  },
  "minimap": {
    "show": "never"
  },
  "wrap_guides": [80, 100],
  "format_on_save": "on",
  "languages": {
    "TypeScript": {
      // "language_servers": ["tsgo", "!vtsls", "!typescript-language-server"],
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
        "quickfix.biome": true
      }
    },
    "TSX": {
      // "language_servers": ["tsgo", "!vtsls", "!typescript-language-server"],
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
        "quickfix.biome": true
      }
    },
    "CSS": {
      "code_actions_on_format": {
        "source.organizeImports.biome": true,
        "source.fixAll.stylelint": true,
        "quickfix.biome": true
      }
    },
    "SCSS": {
      "language_servers": ["some-sass"]
    },
    "JSON": {
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
        "quickfix.biome": true
      }
    },
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  },
  "lsp": {
    "some-sass": {
      "settings": {}
    },

    "vtsls": {
      "settings": {
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 16384
          }
        }
      }
    },
    "biome": {}
  }
}
