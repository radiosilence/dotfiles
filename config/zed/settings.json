{
  "context_servers": {
    "folk": {
      "command": "mise",
      "args": ["x", "--", "mainlymcpfolk"],
    },
    "fastmail": {
      "command": "mise",
      "args": ["x", "--", "fastmail-cli", "mcp"],
    },
  },
  "tab_size": 2,
  "toolbar": {
    "code_actions": true,
  },
  "hover_popover_delay": 200,
  "ui_font_family": "Geist Mono",
  "auto_update": false,
  "agent_servers": {
    "claude": {
      "default_model": "opus",
      "default_mode": "bypassPermissions",
    },
  },
  "project_panel": {
    "dock": "left",
  },
  "outline_panel": {
    "dock": "left",
  },
  "git_panel": {
    "dock": "left",
  },
  "features": {
    "edit_prediction_provider": "zed",
  },
  "edit_predictions": {
    "mode": "subtle",
  },
  "inlay_hints": {
    "enabled": true,
    "edit_debounce_ms": 0,
    "scroll_debounce_ms": 0,
    "show_background": true,
    "show_other_hints": true,
    "show_parameter_hints": true,
    "show_type_hints": true,
    "show_value_hints": true,
    "toggle_on_modifiers_press": {
      "alt": true,
      "control": true,
      "function": true,
      "platform": true,
      "shift": true,
    },
  },
  "use_system_prompts": true,
  "auto_install_extensions": {
    "ansible": true,
    "astro": true,
    "basher": true,
    "biome": true,
    "catppuccin": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "elixir": true,
    "emmet": true,
    "git-firefly": true,
    "harper": true,
    "helm": true,
    "html": true,
    "ruby": true,
    "kotlin": true,
    "lua": true,
    "nginx": true,
    "proto": true,
    "scss": true,
    "stylelint": true,
    "tailwind-css": true,
    "terraform": true,
    "tombi": true,
    "zedokai": true,
  },
  "agent": {
    "dock": "right",
    "play_sound_when_agent_done": false,
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4",
    },
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest",
    },
  },
  "agent_ui_font_size": 13.0,
  "ui_font_size": 13.0,
  "buffer_font_size": 12.0,
  "buffer_font_family": "Geist Mono",
  "terminal": {
    "dock": "bottom",
    "font_family": "GeistMono Nerd Font",
    "font_features": {
      "liga": false,
    },
    "cursor_shape": "bar",
    "minimum_contrast": 0,
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Zedokai",
  },
  "minimap": {
    "display_in": "active_editor",
    "thumb": "always",
    "show": "never",
  },
  "wrap_guides": [80, 100],
  "soft_wrap": "none",
  "format_on_save": "on",
  "ensure_final_newline_on_save": false,
  "sticky_scroll": {
    "enabled": true,
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_keep_preview_on_code_navigation": true,
  },
  "languages": {
    "TypeScript": {
      // If you don't disable them runs all of them which breaks shit
      "language_servers": [
        "!tsgo",
        "vtsls",
        "!typescript-language-server",
        "...",
      ],
      "colorize_brackets": true,
      "formatter": [
        { "code_action": "source.fixAll.eslint" },
        { "code_action": "source.fixAll.biome" },
        { "code_action": "source.organizeImports.biome" },
        { "language_server": { "name": "biome" } },
      ],
    },
    "TSX": {
      // If you don't disable them runs all of them which breaks shit
      "language_servers": [
        "!tsgo",
        "vtsls",
        "!typescript-language-server",
        "...",
      ],
      "colorize_brackets": true,
      "formatter": [
        { "code_action": "source.fixAll.eslint" },
        { "code_action": "source.fixAll.biome" },
        { "code_action": "source.organizeImports.biome" },
        { "language_server": { "name": "biome" } },
      ],
    },
    "Proto": {
      "language_servers": ["buf", "..."],
    },
    "CSS": {
      "code_actions_on_format": {
        "source.fixAll.stylelint": true,
        "source.organizeImports.biome": true,
      },
    },
    "SCSS": {
      "code_actions_on_format": {
        "source.fixAll.stylelint": true,
      },
    },
    "GraphQL": { "formatter": { "language_server": { "name": "biome" } } },
    "Elixir": {
      "colorize_brackets": true,
      "formatter": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"],
        },
      },
      "language_servers": [
        "expert",
        "!elixir-ls",
        "!next-ls",
        "!lexical",
        "...",
      ],
      "format_on_save": "on",
    },
    "Ruby": {
      "colorize_brackets": true,
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph", "..."],
      "formatter": [
        { "code_action": "source.fixAll.rubocop" },
        { "language_server": { "name": "rubocop" } },
      ],
    },
    "Python": {
      "colorize_brackets": true,
      "language_servers": ["pyright", "ruff", "codeowners-lsp"],
      "format_on_save": "on",
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        { "code_action": "source.fixAll.ruff" },
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
    "YAML": {
      "formatter": "prettier",
    },
    "Rust": {
      "colorize_brackets": true,
    },
    "Go": {
      "colorize_brackets": true,
    },
    "JSON": {
      "colorize_brackets": true,
    },
    "TOML": {
      "language_servers": ["tombi"],
    },
  },
  "lsp": {
    "codeowners-lsp": {
      "settings": {
        "individual": "@radiosilence",
        "validate_owners": true,
        "github_token": "env:GITHUB_TOKEN",
      },
    },
    "rust-analyzer": {
      "enable_lsp_tasks": true,
      "binary": {
        "ignore_system_version": true,
      },
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true,
          },
          "closureReturnTypeHints": {
            "enable": "always",
          },
        },
      },
    },
    "harper-ls": {
      "settings": {
        "harper-ls": {
          "dialect": "British",
          "userDictPath": "~/.config/harper-ls/dictionary.txt",
          "fileDictPath": "~/.config/harper-ls/file-dicts",
          "linters": {
            "AvoidCurses": false,
          },
        },
      },
    },
    "stylelint-lsp": {
      "settings": {
        "stylelint": {
          "validate": ["css", "postcss", "scss"],
        },
      },
    },
    "some-sass": {
      "settings": {},
    },
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false,
      },
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
        },
      },
    },
    "vtsls": {
      "settings": {
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 26384,
          },
        },
      },
    },
    "biome": {
      "settings": {
        "require_config_file": true,
      },
    },
    "ruff": {},
    "tailwindcss": {},
  },
}
