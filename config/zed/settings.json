{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "auto_install_extensions": {
    "ansible": true,
    "astro": true,
    "basher": true,
    "biome": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "elixir": true,
    "fish": true,
    "git-firefly": true,
    "helm": true,
    "html": true,
    "ini": true,
    "kotlin": true,
    "lua": true,
    "nginx": true,
    "pylsp": true,
    "scss": true,
    "ssh-config": true,
    "terraform": true,
    "toml": true,
    "zedokai": true
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "ui_font_size": 15,
  "buffer_font_size": 14.0,
  "buffer_font_family": "GeistMono Nerd Font",
  "terminal": {
    "font_size": 12
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Zedokai"
  },
  "wrap_guides": [80, 100],
  "format_on_save": "on",
  "languages": {
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "CSS": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.stylelint": true
      }
    },
    "SCSS": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.stylelint": true
      }
    },
    "JSON": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "Astro": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    }
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 24000
          }
        }
      }
    },
    "biome": {
      "settings": {
        "require_config_file": false
      }
    }
  }
}
